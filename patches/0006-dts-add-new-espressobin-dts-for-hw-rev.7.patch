+#include "armada-3720-community.dts"
+
+/ {
+	model = "Marvell Armada 3720 Community Board rev.7";
+	compatible = "marvell,espressobin-rev7", "marvell,armada-3720-community", "marvell,armada3720", "marvell,armada3710";
+
+	dsa@0 {
+	/* for ESPRESSObin HW rev.7, we swapped the wan and lan0 port */
+		switch@0 {
+			port@1 {
+				reg = <1>;
+				label = "lan1";
+				phy-handle = <&phy1>;
+			};
+			port@3 {
+				reg = <3>;
+				label = "wan";
+				phy-handle = <&phy3>;
+			};
+		};
+	};
+};
